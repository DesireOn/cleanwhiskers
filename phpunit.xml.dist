<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
    cacheResult="true"
    cacheDirectory="var/.phpunit.cache"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Functional">
            <directory>tests/Functional</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration</directory>
        </testsuite>
        <testsuite name="Command">
            <directory>tests/Command</directory>
        </testsuite>
        <testsuite name="e2e">
            <directory>tests/E2E</directory>
        </testsuite>
        <testsuite name="Twig">
            <directory>tests/Twig</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>var</directory>
            <directory>vendor</directory>
        </exclude>
    </source>

    <coverage cacheDirectory="var/.phpunit.cache/coverage">
        <include>
            <directory>src</directory>
        </include>
        <report>
            <html outputDirectory="var/coverage"/>
            <text/>
        </report>
    </coverage>

    <php>
        <!-- Symfony test env -->
        <env name="APP_ENV" value="test"/>
        <env name="APP_DEBUG" value="1"/>
        <env name="KERNEL_CLASS" value="App\Kernel"/>
        <!-- Point to a dedicated test DB (override in .env.test.local if needed) -->
        <env name="DATABASE_URL" value="mysql://user:pass@127.0.0.1:3306/app_test?serverVersion=8.0&charset=utf8mb4"/>
        <!-- Silence deprecations in CI without hiding them locally -->
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="weak"/>
    </php>
</phpunit>
