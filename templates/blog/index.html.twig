{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/blog.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/blog.js') }}" defer></script>
{% endblock %}

{% block body %}
<header class="blog-header">
    <h1>{{ title }}</h1>
</header>
<section class="post-list">
    {% for post in posts %}
        {% include 'blog/_post_teaser.html.twig' with {post: post} %}
    {% else %}
        <p>No posts found.</p>
    {% endfor %}
</section>
<nav class="blog-pagination" aria-label="Pagination">
    {% if prev_page %}
        <a href="{{ path('app_blog_index', prev_page > 1 ? {page: prev_page} : {}) }}" rel="prev">Newer posts</a>
    {% endif %}
    {% if next_page %}
        <a href="{{ path('app_blog_index', {page: next_page}) }}" rel="next">Older posts</a>
    {% endif %}
</nav>
{% endblock %}
