<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-brand">
      <a href="{{ path('app_homepage') }}" class="footer-logo">CleanWhiskers</a>
      <p class="footer-tagline">{{ 'Find trusted pet groomers near you.'|trans }}</p>
    </div>
    <div class="footer-columns">
      <nav class="footer-nav" aria-label="Footer">
        <h3 class="footer-heading">{{ 'Navigate'|trans }}</h3>
        <ul>
          <li><a href="#about">About</a></li>
          <li><a href="#contact">Contact</a></li>
          <li><a href="#faq">FAQ</a></li>
          <li><a href="#terms">Terms</a></li>
          <li><a href="#privacy">Privacy</a></li>
        </ul>
      </nav>
      <nav class="footer-social" aria-label="Social media">
        <h3 class="footer-heading">{{ 'Follow Us'|trans }}</h3>
        <ul>
          <li><a href="https://twitter.com/cleanwhiskers" target="_blank" rel="noopener" aria-label="Twitter">🐦</a></li>
          <li><a href="https://facebook.com/cleanwhiskers" target="_blank" rel="noopener" aria-label="Facebook">📱</a></li>
          <li><a href="https://instagram.com/cleanwhiskers" target="_blank" rel="noopener" aria-label="Instagram">📷</a></li>
        </ul>
      </nav>
      <form id="footer-search" class="footer-search" method="get" action="{{ path('app_search_redirect') }}" role="search">
        <h3 class="footer-heading">{{ 'Search'|trans }}</h3>
        <label for="footer-city" class="sr-only">{{ 'Search by city'|trans }}</label>
        <input type="text" id="footer-city" name="city" list="city-list" placeholder="{{ 'City or ZIP'|trans }}" required>
        <button type="submit" class="btn btn--accent">{{ 'Search'|trans }}</button>
      </form>
    </div>
    <div class="footer-bottom">
      <p>&copy; {{ 'now'|date('Y') }} CleanWhiskers</p>
      <a href="#top" class="back-to-top btn btn--accent">{{ 'Back to top'|trans }}</a>
    </div>
  </div>
</footer>

