{% set currentRoute = app.request.attributes.get('_route') %}
<header class="site-header">
  <div class="nav-container">
    <a href="{{ path('app_homepage') }}" class="site-logo">CleanWhiskers</a>
    <button id="mobile-nav-toggle" class="mobile-nav-toggle" aria-expanded="false" aria-controls="mobile-nav" aria-label="{{ 'Menu'|trans }}" type="button">
      <span class="hamburger" aria-hidden="true"></span>
    </button>
    <nav id="mobile-nav" class="mobile-nav" role="navigation" aria-label="{{ 'Primary'|trans }}" aria-hidden="true">
      <ul class="nav">
        <li class="nav__item"><a class="nav__link nav__link--cta" href="{{ path('app_search_redirect') }}">{{ 'Find a Groomer'|trans }}</a></li>
        <li class="nav__item"><a class="nav__link" href="{{ path('app_register', {'role': 'groomer'}) }}">{{ 'List Your Business'|trans }}</a></li>
        <li class="nav__item"><a class="nav__link" href="{{ path('app_blog_index') }}" {% if currentRoute starts with 'app_blog' %}aria-current="page"{% endif %}>{{ 'Blog'|trans }}</a></li>
      </ul>
    </nav>
  </div>
</header>
