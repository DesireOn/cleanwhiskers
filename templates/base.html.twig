<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% set title %}{% block title %}CleanWhiskers{% endblock %}{% endset %}
    {% set meta_description %}{% block meta_description %}Find trusted pet groomers with CleanWhiskers.{% endblock %}{% endset %}
    {% set canonical %}{% block canonical %}{{ app.request.uri }}{% endblock %}{% endset %}
    {% set og_title %}{% block og_title %}{{ title }}{% endblock %}{% endset %}
    {% set og_description %}{% block og_description %}{{ meta_description }}{% endblock %}{% endset %}
    {% set twitter_title %}{% block twitter_title %}{{ og_title }}{% endblock %}{% endset %}
    {% set twitter_description %}{% block twitter_description %}{{ og_description }}{% endblock %}{% endset %}
    {% include 'partials/_seo_head.html.twig' with {
        title: title,
        meta_description: meta_description,
        canonical: canonical,
        og_title: og_title,
        og_description: og_description,
        twitter_title: twitter_title,
        twitter_description: twitter_description
    } %}
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
    <a class="skip-link" href="#main">Skip to content</a>
    {% include 'partials/_header.html.twig' %}
    <main id="main" class="container">
        {% block body %}{% endblock %}
    </main>
    {% include 'partials/_footer.html.twig' %}
</body>
</html>
