{% if featuredGroomers|length %}
    <section id="featured-groomers" class="featured-groomers section">
        <h2 class="featured-groomers__title">Featured Groomers</h2>
        <div class="featured-groomers__grid">
            {% for item in featuredGroomers %}
                {% set g = item.profile %}
                {% set badges = ['New', 'Verified'] %}
                {{ include('partials/_groomer-card.html.twig', {
                    profile: g,
                    rating: item.rating,
                    reviewCount: item.reviewCount,
                    badges: badges,
                    class: 'featured-groomer-card'
                }) }}
            {% endfor %}
        </div>
    </section>
{% endif %}
