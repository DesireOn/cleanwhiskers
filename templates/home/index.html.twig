{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/forms.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/blocks/search.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/blocks/how-it-works.css') }}">
