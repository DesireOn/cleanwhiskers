<section class="home-cities reveal-on-scroll" aria-labelledby="popular-cities-title">
    <div class="city-section__inner">
        <header class="home-cities__header">
            <span class="home-cities__kicker">{{ 'Concierge cities'|trans }}</span>
            <h2 id="popular-cities-title" class="home-cities__title">{{ 'Where pet parents are already booking mobile grooming through us'|trans }}</h2>
            <p class="home-cities__lede">{{ 'Explore a few of our most requested concierge locations â€” we\'re expanding every month.'|trans }}</p>
        </header>

        <ul class="home-cities__grid" role="list">
            {% for city in popularCities %}
                <li class="home-cities__item">
                    <a class="home-cities__link" href="{{ path('app_groomer_list_by_city_service', {citySlug: city.slug, serviceSlug: constant('App\\Entity\\Service::MOBILE_DOG_GROOMING')}) }}" aria-label="{{ 'Groomers in %city%'|trans({'%city%': city.name}) }}">
                        <span class="home-cities__avatar" aria-hidden="true">
                            {% if city.image is defined and city.image %}
                                <img src="{{ city.image }}" alt="" loading="lazy">
                            {% else %}
                                {{ city.name|slice(0,1) }}
                            {% endif %}
                        </span>
                        <span class="home-cities__name">{{ city.name }}</span>
                        <span class="home-cities__cta">{{ 'View city'|trans }}</span>
                    </a>
                </li>
            {% else %}
                <li class="home-cities__item home-cities__item--empty">{{ 'City coming soon'|trans }}</li>
            {% endfor %}
        </ul>
    </div>
</section>
