<section class="choose-guide reveal-on-scroll" aria-labelledby="choose-guide-title">
    <div class="choose-guide__inner">
        <header class="choose-guide__header">
            <h2 id="choose-guide-title">{{ 'What CleanWhiskers handles for you'|trans }}</h2>
            <p class="choose-guide__subtitle">{{ 'Follow this concierge checklist to make grooming effortless.'|trans }}</p>
        </header>

        <ol class="choose-guide__list" role="list">
            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">1</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Share your pet\'s needs'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'Include coat type, temperament, medical notes, and timing once.'|trans }}</p>
                </div>
            </li>

            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">2</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'We shortlist vetted groomers'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'Our team reviews every partner and keeps tabs on availability before we connect you.'|trans }}</p>
                </div>
            </li>

            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">3</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Compare clear quotes'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'We coordinate responses so you see ready-to-book options without phone tag.'|trans }}</p>
                </div>
            </li>

            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">4</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Confirm and relax'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'You pick the match, they arrive equipped, and your pet returns refreshed.'|trans }}</p>
                </div>
            </li>
        </ol>

        <div class="choose-guide__cta">
            <a class="btn btn--accent tap-target" href="#search-form">{{ 'Start a concierge request'|trans }}</a>
        </div>
    </div>
</section>
