<section class="choose-guide reveal-on-scroll" aria-labelledby="choose-guide-title">
    <div class="choose-guide__inner">
        <header class="choose-guide__header">
            <h2 id="choose-guide-title">{{ 'How to Choose a Groomer'|trans }}</h2>
            <p class="choose-guide__subtitle">{{ 'Follow these simple steps to find the right fit for your pet.'|trans }}</p>
        </header>

        <ol class="choose-guide__list" role="list">
            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">1</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Choose mobile grooming'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'Convenient, at-your-door service that keeps pets calm.'|trans }}</p>
                </div>
            </li>

            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">2</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Check credentials and insurance'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'We list local groomers and share available details. Please confirm credentials and insurance directly.'|trans }}</p>
                </div>
            </li>

            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">3</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Compare availability and pricing'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'See clear rates and book times that work for you.'|trans }}</p>
                </div>
            </li>

            <li class="choose-guide__item">
                <div class="choose-guide__badge" aria-hidden="true"><span class="choose-guide__step">4</span></div>
                <div class="choose-guide__content">
                    <h3 class="choose-guide__title">{{ 'Read reviews and view profiles'|trans }}</h3>
                    <p class="choose-guide__text">{{ 'Learn from real ratings and check services each groomer offers.'|trans }}</p>
                </div>
            </li>
        </ol>

        <div class="choose-guide__cta">
            <a class="btn btn--accent tap-target" href="#search-form">{{ 'Compare local and mobile groomers near you.'|trans }}</a>
        </div>
    </div>
</section>
