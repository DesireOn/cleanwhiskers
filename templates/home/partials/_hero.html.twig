<section class="hero">
    <div class="hero__container">
        <h1 class="hero__title">{{ 'Book mobile pet grooming in minutes â€” trusted local professionals.'|trans }}</h1>
        <form id="search-form" class="hero__form" method="get" action="/search" role="search">
            <label for="city" class="hero__label">{{ 'Where is your pet?'|trans }}</label>
            <div class="hero__controls stack-sm">
                <input
                    class="hero__input city-input"
                    type="text"
                    id="city"
                    name="city"
                    placeholder="{{ 'City'|trans }}"
                    required
                    role="combobox"
                    aria-autocomplete="list"
                    aria-expanded="false"
                    aria-controls="city-list"
                    aria-haspopup="listbox"
                >
                <div id="city-list" class="city-suggestions" role="listbox" hidden>
                    {% for city in cities %}
                        <div role="option" class="city-suggestion" data-value="{{ city.slug }}">{{ city.name }}</div>
                    {% endfor %}
                </div>
                <button id="search-submit" class="hero__submit search-form__button btn btn--accent" type="submit" aria-live="polite" aria-busy="false">
                    <span class="btn__label">{{ ctaLinks.find.label|trans }}</span>
                    <span class="spinner" hidden></span>
                </button>
            </div>
        </form>
    </div>
</section>

