<section class="hero" aria-labelledby="hero-title">
    <img
        class="hero__image"
        src="{{ asset('images/hero-grooming.jpg') }}"
        alt=""
        aria-hidden="true"
        role="presentation"
        fetchpriority="high"
    />
    <div class="hero__container">
        <h1 id="hero-title" class="hero__title">
            {{ 'Book mobile pet grooming in minutes — trusted local professionals.'|trans }}
        </h1>
        <p class="hero__subtitle">
            {{ 'Convenient mobile grooming that reduces stress for you and your pet.'|trans }}
        </p>

        <form id="search-form" class="hero__form" method="get" action="/search" role="search" aria-describedby="city-help" autocomplete="off">
            <label for="city" class="hero__label">{{ 'Where is your pet?'|trans }}</label>
            <div class="hero__controls">
                <input
                    class="hero__input city-input"
                    type="text"
                    id="city"
                    name="city"
                    placeholder="{{ 'Enter city (e.g., Seattle)'|trans }}"
                    autocomplete="off"
                    inputmode="text"
                    required
                    role="combobox"
                    aria-autocomplete="list"
                    aria-expanded="false"
                    aria-controls="city-list"
                    aria-haspopup="listbox"
                    aria-describedby="city-help"
                >
                <input type="hidden" name="service" value="{{ constant('App\\Entity\\Service::MOBILE_DOG_GROOMING') }}">
                <button class="hero__submit search-form__button btn btn--accent" type="submit" id="search-submit">
                    {{ ctaLinks.find.label|trans }}
                </button>
            </div>
            <span id="city-help" class="visually-hidden">{{ 'Focus or start typing to see suggestions for your city.'|trans }}</span>
        </form>

        <div class="hero__meta" aria-label="Service highlights">
            <span class="hero__badge"><span aria-hidden="true">🚐</span> {{ 'Mobile grooming at your doorstep'|trans }}</span>
            <span class="hero__badge"><span aria-hidden="true">🛡️</span> {{ 'Vetted & insured groomers'|trans }}</span>
            <span class="hero__badge"><span aria-hidden="true">📅</span> {{ 'Stress‑free booking'|trans }}</span>
        </div>
    </div>
</section>
