{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
  <section class="container" style="max-width:480px;margin:2rem auto;">
    <h1>Sign in</h1>

    {% if error %}
      <div class="flash-error" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="form">
      <label for="username">Email</label>
      <input type="email" id="username" name="_username" value="{{ last_username }}" autocomplete="email" required />

      <label for="password" style="margin-top: .75rem;">Password</label>
      <input type="password" id="password" name="_password" autocomplete="current-password" required />

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button class="btn" type="submit" style="margin-top: 1rem;">Login</button>
    </form>
  </section>
{% endblock %}

