<?php

$finder = (new PhpCsFixer\Finder())
    ->in(__DIR__ . '/src')
    ->in(__DIR__ . '/tests')
    ->exclude(['var', 'vendor', 'public/bundles']);

$header = <<<'HDR'
This file is part of the project.
(c) Your Company <dev@example.com>
HDR;

return (new PhpCsFixer\Config())
    ->setRiskyAllowed(true)
    ->setFinder($finder)
    ->setRules([
        '@PSR12' => true,
        '@Symfony' => true,
        'header_comment' => ['header' => $header, 'separate' => 'bottom'],
        'declare_strict_types' => true,
        'ordered_imports' => ['imports_order' => ['class', 'function', 'const'], 'sort_algorithm' => 'alpha'],
        'no_unused_imports' => true,
        'native_function_invocation' => ['scope' => 'all', 'include' => ['@compiler_optimized'], 'strict' => true],
        'native_constant_invocation' => ['scope' => 'namespaced', 'strict' => true],
        'phpdoc_align' => ['align' => 'left'],
        'phpdoc_to_comment' => false,
        'phpdoc_separation' => false,
        'array_syntax' => ['syntax' => 'short'],
        'binary_operator_spaces' => ['default' => 'align_single_space_minimal'],
        'yoda_style' => false,
        'concat_space' => ['spacing' => 'one'],
        'multiline_whitespace_before_semicolons' => ['strategy' => 'no_multi_line'],
        'global_namespace_import' => ['import_constants' => true, 'import_functions' => true, 'import_classes' => true],
        'no_superfluous_phpdoc_tags' => ['allow_mixed' => true, 'remove_inheritdoc' => false],
        'blank_line_before_statement' => ['statements' => ['return', 'try', 'throw', 'if', 'for', 'foreach', 'while', 'do', 'switch']],
        'class_definition' => ['space_before_parenthesis' => true],
        'method_argument_space' => ['on_multiline' => 'ensure_fully_multiline'],
        'no_trailing_comma_in_singleline' => true,
        'single_quote' => true,
    ]);
